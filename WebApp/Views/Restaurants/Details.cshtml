@model Models.Restaurant

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<a class="nav-link" asp-area="" asp-controller="Reviews" asp-action="Create">Leave a review</a>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cuisine)
        </dd>
    </dl>
</div>

<p class="ReviewsInRestaurant">
<p>
    <h4>Reviews</h4>
    <hr />
    <ul>
        @foreach (var review in ViewData["ReviewsList"] as List<Models.Reviews>)
        {
            <li>
                @review.Rating<br />

                @review.Content<br />

                @review.Date.ToShortDateString()<br />

            </li>
            <br />
            <br />

        }
    </ul>

    @{ var dataTest = ViewData["ReviewsList"] as List<Models.Reviews>; }
    @if (dataTest.Count == 0)
    {
        <a class="nav-link" asp-area="" asp-controller="Reviews" asp-action="Create">No reviews found. Be the first!</a>
    }

</p>
           
<div>

    <a asp-action="Index">Back to List</a>
</div>
